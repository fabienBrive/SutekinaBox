{% extends 'base.html.twig' %}

{% block title %}Box{% endblock %}

{% block body %}
    <h1>Box</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ box.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ box.name }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ box.creationDate ? box.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Budget</th>
                <td>{{ box.budget }}</td>
            </tr>
            <tr>
                <th>IsValidate</th>
                <td>{{ box.isValidate ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('box_index') }}">back to list</a>

    <a href="{{ path('box_edit', {'id': box.id}) }}">edit</a>

    {{ include('box/_delete_form.html.twig') }}
{% endblock %}
