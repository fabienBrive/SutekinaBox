{% extends 'base.html.twig' %}

{% block title %}Box index{% endblock %}

{% block body %}
    <h1>Box index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreationDate</th>
                <th>Budget</th>
                <th>IsValidate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for box in boxes %}
            <tr>
                <td>{{ box.id }}</td>
                <td>{{ box.name }}</td>
                <td>{{ box.creationDate ? box.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ box.budget }}</td>
                <td>{{ box.isValidate ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('box_show', {'id': box.id}) }}">show</a>
                    <a href="{{ path('box_edit', {'id': box.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('box_new') }}">Create new</a>
{% endblock %}
